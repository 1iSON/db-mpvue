.lists_box .lists_t {
  display: flex;
  justify-content: space-between;
  font-size: 42rpx;
  font-weight: 500;
  color: #1A1A1A;
  padding: 80rpx 0 50rpx 0;
}
.lists_box:nth-of-type(1) .lists_t {
  position: relative;
  top: -30rpx;
  padding: 80rpx 0 16rpx 0;
}
.lists_box .lists_t .see_more {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #007AFE;
}
.lists_box .lists_t .see_more .more_img2 {
  width: 10rpx;
  height: 20rpx;
  margin-left: 15rpx;
}
.lists_box .lists_t .see_more .more_img1 {
  width: 24rpx;
  height: 24rpx;
  margin-left: 15rpx;
}
.lists_box .lists_l {
  width: 678rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 0rpx 27rpx 0rpx #D7E7F7;
  border-radius: 8rpx;
}
.lists_box .lists_l .l_nav {
  display: flex;
  white-space: nowrap;
  overflow-x: scroll;
  border-bottom: 1rpx solid #EBEBEB;
  margin: 0 36rpx;
}
.lists_box .lists_l .l_nav .navs {
  font-size: 30rpx;
  padding: 24rpx 0;
  margin: 0 18rpx;
  color: #8A8A8A;
}
.lists_box .lists_l .l_nav .navs:first-child {
  margin-left: 0;
}
.lists_box .lists_l .l_nav .active {
  color: #1A1A1A;
  font-weight: 500;
  position: relative;
}
.lists_box .lists_l .l_nav .active::after {
  content: '';
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 6rpx;
  width: 60rpx;
  height: 8rpx;
  background: #007AFE;
  opacity: 0.93;
  border-radius: 6rpx;
  transition: all 2s;
}
.lists_box .lists_l .l_choose {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  margin: 0 36rpx;
  font-size: 28rpx;
}
.lists_box .lists_l .l_choose image {
  width: 24rpx;
  height: 24rpx;
}
.lists_box .lists_l .l_choose:nth-of-type(2) {
  padding-top: 48rpx;
}
.lists_box ::-webkit-scrollbar {
  display: none;
}
